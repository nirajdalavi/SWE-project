.main-container {
  display: flex;

  flex: 1;
  background: var(--color-bg);
  padding: 0; /* Remove padding here, add to sidebar/main-content */
  gap: 2rem;
}

.sidebar {
  width: 350px;
  background: var(--color-sidebar);
  padding: 2rem 1.5rem;
  display: flex;

  flex-direction: column;
  gap: 2rem;
  min-height: 100vh; /* Ensure sidebar stretches */
  box-sizing: border-box;
}

.sidebar-logo {
  display: flex;
 /* Use flexbox to arrange items in a row */
  flex-direction: row; /* Arrange children horizontally */
  align-items: center; /* Vertically align items in the center of the row */
  gap: 1rem; /* Space between the logo image and the text container */
  margin-bottom: 1rem;
}

.sidebar-logo-img {
  height: 100px; /* Keep logo image size */
  width: auto;
  margin-right: 0; /* No margin-right needed here as 'gap' handles spacing */
  margin-bottom: 0; /* No margin-bottom needed as it's in a row now */
}

/* Container for the text elements (Aqeed.ai and Powered by) */
.sidebar-logo-text-container {
  display: flex;

  flex-direction: column; /* Stack the text elements vertically */
  align-items: flex-start; /* Align text items to the left within their column */
  justify-content: center; /*Vertically center the text block if needed  */
  flex-grow: 1; /* Allow this container to take up available horizontal space */
}

.sidebar-logo-text {
  color: var(--color-text);
  font-size: 1.5rem; /* Main text larger */
  font-weight: bold; /* Keep it bold */
  line-height: 1.2; /* Adjust line height for stacking */
  margin-bottom: 0; /* Remove any default margin that pushes "Powered by" down too much */
  text-align: center;
  width: 70%;
}

.powered-by-text {
  font-size: 0.8rem; /* Slightly larger than 0.75rem for better readability, or keep 0.75rem if preferred */
  font-weight: bold;
  color: var(--color-muted); /* Muted color */
  margin-top: 0.2rem; /* Small margin to separate from "Aqeed.ai" */
  text-transform: none; /* REMOVE uppercase transformation */
  letter-spacing: normal; /* REMOVE letter spacing if it was causing issues */
  line-height: 1; /* Tighten line height for smaller text */
  text-align: center;
  width: 70%;
}


.sidebar .section-title {
  color: var(--color-muted);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.sidebar .workspace-selector,
.sidebar .prompt-manager,
.sidebar .metrics-chart,
.sidebar .file-upload-section { /* Added class for FileUpload parent */
  background: var(--color-card);
  border-radius: 12px;
  padding: 1rem;
  margin-bottom: 2rem;
  margin-bottom: 1.5rem; /* Consistent spacing between sections */
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
  margin-top: 2rem;
}

.sidebar .workspace-selector h3,
.sidebar .prompt-manager h3,
.sidebar .metrics-chart h3,
.sidebar .file-upload-section h3 {
  color: var(--color-text);
  margin-top: 0;
  margin-bottom: 1rem;
}


.sidebar select {
  width: 100%;
  padding: 0.5rem;
  border-radius: 6px;

  background-color: var(--color-input-bg);
  color: var(--color-text);
  font-size: 1rem;
  margin-bottom: 1rem;
}

.sidebar input[type="text"],
.sidebar input[type="number"] {
  width: calc(100% - 16px); /* Adjust for padding */
  padding: 0.5rem;
  border-radius: 6px;
  border: 1px solid var(--color-input-border);
  background-color: var(--color-input-bg);
  color: var(--color-text);
  font-size: 1rem;
  margin-bottom: 1rem;
}

.sidebar .workspace-selector,
.sidebar .prompt-manager,
.sidebar .metrics-chart-card,
.sidebar .file-upload-section,
.sidebar .evaluation-mode-card { /* Make sure 'evaluation-mode-card' is in this group */
  margin-bottom: 0; /* Handled by sidebar gap */
  padding: 1.2rem; /* Default padding for these sidebar cards */
}

/* Specific styles for the evaluation mode card to make it smaller */
.evaluation-mode-card {
  padding: 0.5rem 1 rem; /* Reduced padding: top/bottom 0.8rem, left/right 1.2rem */ /* Changed: Reduced padding further */
}

.evaluation-mode-card .section-title {
  margin-bottom: 0.4rem; /* Reduced margin-bottom for the title */ /* Changed: Reduced margin */
}

.evaluation-mode-card .mode-selector {
  margin-bottom: 0.2rem; /* Reduced margin-bottom for the button group */ /* Changed: Reduced margin */
  gap: 0.5rem; /* Adjusted gap between buttons if needed */ /* Changed: Adjusted gap */
}

/* Main Content Area */
.main-content { /* Replaces .content */
  flex: 1;
  padding: 2.5rem 2rem;
  background: var(--color-bg);
  min-width: 0; /* Allow content to shrink */
  display: flex;

  flex-direction: column;
  gap: 2rem; /* This provides spacing between direct flex children */
}
.quick-prompts-list {
  display: flex;

  flex-direction: column;
  gap: 1rem;
}

/* Prompt button styles */
.quick-prompt-button {
  padding: 1rem;
  border-radius: 12px;
  border: 1px solid #dcdfe3;
  background-color: #f9f9fb;
  font-size: 1rem;
  color: #555;
  text-align: left;
  transition: background 0.2s ease;
}

.quick-prompt-button.active {
  background-color: #e6f0ff;
  color: #0056d2;
  font-weight: 600;
}

