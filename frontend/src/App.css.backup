/* frontend/src/App.css - Allyin Compass Design System */

/* Root CSS Variables for Color Palette */
:root {
  --color-bg: #F3F4F6;              /* Main app background */
  --color-card: #FFFFFF;           /* Card backgrounds */
  --color-sidebar: #FFFFFF;        /* Sidebar background */
  --color-primary: #7B5CFF;        /* Purple accent (buttons, highlights) */
  --color-secondary: #F3F4F6;      /* Secondary (hover, unselected buttons) */
  --color-accent: #00E599;         /* Success/green button */
  --color-danger: #FF4D4F;         /* Error/red button or icon */
  --color-text: #1E1E1E;           /* Primary text */
  --color-muted: #7B7B7B;          /* Muted text or labels */
  --color-border: #E5E7EB;         /* Light gray for dividers and outlines */

  --color-chip-bg: #F3F4F6;        /* Background of file chips */
  --color-chip-text: #414349;      /* Text in chips */

  --color-btn-primary: #7B5CFF;    /* Primary purple button */
  --color-btn-secondary: #E5E7EB;  /* Gray button */
  --color-btn-text: #FFFFFF;

  --color-input-bg: #FFFFFF;
  --color-input-border: #D1D5DB;   /* Matches soft border on textareas/inputs */
}

[data-theme='dark'] {
  --color-bg: #10141c;
  --color-sidebar: #10141c;
  --color-card: #222c44;
  --color-secondary: #44404b;
  --color-text: #ffffff;
  --color-secondary-text: #c1c1c1;
  --color-muted: #71717a;
  --color-accent-primary: #8b5cf6;
  --color-accent-secondary: #6676ea;
  --color-success: #22c55e;
  --color-warning: #f59e0b;
  --color-error: #ef4444;
  --color-border: #2e2e2e;
  --color-input-bg: #222c44;
  --color-input-border: #3f3f3f;
  --color-card: #1e1f23;
  --color-secondary: #2e3242;  --color-border: #3a3a3a;
  --color-muted: #a1a1aa;
  --color-input-bg: #2b2d36;
  --color-input-border: #444654;
  --color-chip-bg: #3c3e4a;
  --color-chip-text: #e0e0e0;
  --color-btn-primary: #8E7CFF;
  --color-btn-secondary: #8b5cf6; /* Match primary for now */
  --color-btn-text: #ffffff;
  --color-text: #ffffff;
  --color-sidebar-bg: #1f1f2e;
  --color-sidebar-border: #33344a;
  --color-sidebar-text: #e0e0e0;
  --color-sidebar-hover: #2a2a3d;
  --color-sidebar-selected: linear-gradient(90deg, #8e7cff, #627aff);
  --color-panel: #1f1f2e;
  --color-border: #3b3b4f;
  --color-text: #e5e5e5;
  --color-hover: #2a2a3d;
}



/* Global Base Styles */
body, html, #root {
  background: var(--color-bg);
  color: var(--color-text);
  font-family: 'Inter', Arial, sans-serif; /* Using Inter as per design system */
  margin: 0;
  padding: 0;
  box-sizing: border-box; /* Ensure padding/border is included in element's total width/height */
  max-width: 100vw;
  overflow-x: hidden; /* Prevent horizontal scrolling */
  min-height: 100vh;
}

/* Typography */
h1 {
  font-size: 32px;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 1rem;
}

h2 {
  font-size: 24px;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 1rem;
}

h3 {
  font-size: 20px;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 1rem;
}

h4 {
  font-size: 18px;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 0.8rem;
}

p {
  font-size: 16px;
  font-weight: 400;
  color: var(--color-text);
}

small, .small-text {
  font-size: 14px;
  font-weight: 400;
  color: var(--color-muted);
}

/* General Layout */
.App {
  display: flex;

  flex-direction: column;
  min-height: 100vh;
}

